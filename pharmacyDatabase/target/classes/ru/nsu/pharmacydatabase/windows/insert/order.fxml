<AnchorPane prefHeight="300.0" prefWidth="450.0" style="-fx-background-color: #024c68;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nsu.pharmacydatabase.controllers.insert.OrderInsertController">
    <children>
        <VBox alignment="CENTER" layoutX="75.0" layoutY="5.0" prefHeight="300.0" prefWidth="300.0">
            <Label text="Добавить заказ" textFill="WHITE">
                <font>
                    <Font size="18.0" />
                </font></Label>
            <TextField fx:id="medicamentIdField" prefHeight="40.0" prefWidth="300.0" promptText="id лекаства">
            </TextField>
            <TextField fx:id="isReadyField" alignment="TOP_LEFT" prefHeight="40.0" prefWidth="300.0" promptText="Готов (YES/NO)">
            </TextField>
            <TextField fx:id="isReceivedField" alignment="TOP_LEFT" prefHeight="40.0" prefWidth="300.0" promptText="Получен (YES/NO)">
